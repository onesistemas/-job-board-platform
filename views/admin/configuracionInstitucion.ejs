    </div>
</nav>

<div id="app" class="container mt-5">
    <h2 class="text-center mb-4"><i class="fas fa-cogs"></i> Configuración de la Institución</h2>
    <div class="card p-4 shadow-sm">
        <form @submit.prevent="actualizarInstitucion">
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="nombre" class="form-label"><i class="fas fa-school"></i> Nombre de la Institución</label>
                    <input type="text" class="form-control" id="nombre" v-model="institucion.nombre">
                </div>
                <div class="col-md-6">
                    <label for="tipo" class="form-label"><i class="fas fa-building"></i> Tipo de Institución</label>
                    <select class="form-select" v-model="institucion.tipo">
                        <option>Secundaria</option>
                        <option>Secundaria Técnica</option>
                        <option>Secundaria Comercial</option>
                        <option>Terciario</option>
                        <option>Universidad</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="direccion" class="form-label"><i class="fas fa-map-marker-alt"></i> Dirección</label>
                    <input type="text" class="form-control" id="direccion" v-model="institucion.direccion">
                </div>
                <div class="col-md-6">
                    <label for="ciudad" class="form-label"><i class="fas fa-city"></i> Ciudad</label>
                    <input type="text" class="form-control" id="ciudad" v-model="institucion.ciudad">
                </div>
                <div class="col-md-6">
                    <label for="pais" class="form-label"><i class="fas fa-flag"></i> País</label>
                    <select class="form-select" v-model="institucion.pais">
                        <option value="">Seleccionar País</option>
                        <!-- América del Norte -->
